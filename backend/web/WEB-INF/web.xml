<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>UserProfileEdit</servlet-name>
        <servlet-class>controller.UserProfileEdit.UserProfileEditServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreatePost</servlet-name>
        <servlet-class>controller.Post.CreatePost</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewPost</servlet-name>
        <servlet-class>controller.Post.PostViewerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserProfileEdit</servlet-name>
        <url-pattern>/api/user-profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreatePost</servlet-name>
        <url-pattern>/api/post/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostViewerServlet</servlet-name>
        <url-pattern>/api/post</url-pattern>
    </servlet-mapping>
</web-app>
