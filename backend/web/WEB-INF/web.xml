<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>NotificationServlet</servlet-name>
        <servlet-class>controller.NotificationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCommentServlet</servlet-name>
        <servlet-class>controller.Comment.AddCommentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertPlaylist</servlet-name>
        <servlet-class>controller.Music.InsertPlaylist</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdatePlaylist</servlet-name>
        <servlet-class>controller.Music.UpdatePlaylist</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeletePlaylist</servlet-name>
        <servlet-class>controller.Music.DeletePlaylist</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewPlaylist</servlet-name>
        <servlet-class>controller.Music.ViewPlaylist</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NotificationServlet</servlet-name>
        <url-pattern>/NotificationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCommentServlet</servlet-name>
        <url-pattern>/api/comment/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertPlaylist</servlet-name>
        <url-pattern>/api/music/insert</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdatePlaylist</servlet-name>
        <url-pattern>/api/music/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeletePlaylist</servlet-name>
        <url-pattern>/api/music/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewPlaylist</servlet-name>
        <url-pattern>/api/music/view</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>UserProfileEdit</servlet-name>
        <servlet-class>controller.UserProfileEdit.UserProfileEditServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreatePost</servlet-name>
        <servlet-class>controller.Post.CreatePost</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdatePost</servlet-name>
        <servlet-class>controller.Post.UpdatePost</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeletePost</servlet-name>
        <servlet-class>controller.Post.DeletePost</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LikeServlet</servlet-name>
        <servlet-class>controller.Like.LikeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostViewerServlet</servlet-name>
        <servlet-class>controller.Post.PostViewerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserIDServlet</servlet-name>
        <servlet-class>controller.UserIDServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserProfileEdit</servlet-name>
        <url-pattern>/api/user-profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreatePost</servlet-name>
        <url-pattern>/api/post/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdatePost</servlet-name>
        <url-pattern>/api/post/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeletePost</servlet-name>
        <url-pattern>/api/post/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostViewerServlet</servlet-name>
        <url-pattern>/api/post/view/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserIDServlet</servlet-name>
        <url-pattern>/api/user/userid</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LikeServlet</servlet-name>
        <url-pattern>/api/like</url-pattern>
    </servlet-mapping>
</web-app>
