# Treat all text files as text and normalize to LF in repo
* text=auto

# Enforce LF endings for all source files
*.js     text eol=lf
*.jsx    text eol=lf
*.ts     text eol=lf
*.tsx    text eol=lf
*.json   text eol=lf
*.html   text eol=lf
*.css    text eol=lf
*.scss   text eol=lf
*.md     text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf
*.env    text eol=lf
*.sh     text eol=lf

# Windows-specific files (if any)
*.cmd    text eol=crlf
*.bat    text eol=crlf

# Treat images and other binary assets as binary (no EOL conversion)
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.svg    binary
*.ico    binary
*.ttf    binary
*.woff   binary
*.woff2  binary
*.eot    binary
*.mp4    binary
*.webm   binary

# Ignore lockfile changes due to OS differences in line endings
package-lock.json text eol=lf
yarn.lock text eol=lf
